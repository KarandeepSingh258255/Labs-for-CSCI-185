public class Rectangle{
    double height = 1.0;
    double width = 1.0;

    public Rectangle(){
        height = 1;
        width = 1;
    }

    Rectangle(double length, double width){
        this.height = height;
        this.width = width;
    }

    double getArea(){
        return (height * width);
    }

    double getPerimeter(){
        return (2*(height + width));
    }
    public static void main(String[] args) {

        Rectangle rect1 = new Rectangle();

        Rectangle rect2 = new Rectangle(40.0, 4.0);

        System.out.println(" The area of the first rectangle is: " + rect1.getArea());
        System.out.println("The perimeter of the second rectangle is: " + rect2.getPerimeter());
    }
}


